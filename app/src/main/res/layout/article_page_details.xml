<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/article_details_icon"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:layout_width="45dp"
        android:layout_height="45dp" />
    <TextView
        android:id="@+id/article_details_author"
        android:layout_toRightOf="@id/article_details_icon"
        android:paddingTop="7dp"
        android:paddingLeft="10dp"
        android:textColor="#666"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:text="author"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/article_details_body"
        android:layout_toRightOf="@id/article_details_icon"
        android:layout_below="@id/article_details_author"
        android:textColor="#666"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:text="body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/show_more"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/article_details_body"
        android:layout_toRightOf="@id/article_details_icon"
        android:text="阅读全文"
        android:background="#fff"
        android:textColor="#44f"
        android:textSize="16sp"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:textAlignment="viewStart"
        />
    <TextView
        android:id="@+id/article_details_date"
        android:layout_below="@id/show_more"
        android:paddingLeft="14dp"
        android:textColor="#666"
        android:layout_toRightOf="@id/article_details_icon"
        android:text="date"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:layout_below="@id/article_details_date"
        android:background="#666"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

</RelativeLayout>